@model IEnumerable<Inv_Informatico.BL.Categoria>
@{
    ViewBag.Title = "Categoria";
}
<table class="table_titulo">
    <tr>
        <td>
            <img src="~/assets/img/laptop.jpg" style="width: 100px; height: 60px" align="left">
        </td>
        <td align="center" style="color: white">
            <h2>CATEGORIAS</h2>

        </td>
        <td>
            <img src="~/assets/img/laptop.jpg" style="width: 100px; height: 60px" align="right">
        </td>
    </tr>
</table>

<br />
<p>
    @Html.ActionLink("Nueva Categoria", "Crear")
</p>
<div style="width: 100%" align="center">
    <table class="vitamins">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.id }) |
                    @Html.ActionLink("Detalles", "Detalles", new { id = item.id }) |
                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.id })
                </td>
            </tr>
        }
    </table>
</div>