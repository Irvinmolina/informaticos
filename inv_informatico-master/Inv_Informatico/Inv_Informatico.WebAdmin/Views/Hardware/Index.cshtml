@model IEnumerable<Inv_Informatico.BL.Hardware>
@{
    ViewBag.Title = "Hardware";
}
<table class="table_titulo">
    <tr>
        <td>
            <img src="~/assets/img/laptop.jpg" style="width: 100px; height: 60px" align="left">
        </td>
        <td align="center" style="color: white">
            <h2>HARDWARE</h2>

        </td>
        <td>
            <img src="~/assets/img/laptop.jpg" style="width: 100px; height: 60px" align="right">
        </td>
    </tr>
</table>

<br />

<p>
    @Html.ActionLink("Nuevo Hardware", "Crear")
</p>
<div style="width: 100%" align="center">
    <table class="vitamins">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>@Html.DisplayNameFor(model => model.UrlImagen)</th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Existencia)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <img src="@item.UrlImagen" alt="@item.Descripcion" style="width:64px; height:auto;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Existencia)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Detalles", new { id = item.Id }) |
                    @Html.ActionLink("eliminar", "eliminar", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>