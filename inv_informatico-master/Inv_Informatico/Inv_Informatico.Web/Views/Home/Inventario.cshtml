@model List<Inv_Informatico.BL.Inventario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div>
    <h4>Inventario para ubicacion: @ViewBag.Ubicacion.Descripcion</h4>
    <hr />
    <p>Existencia: @ViewBag.Ubicacion.Existencia</p>

    @foreach (var inventario in Model)
    {

        <dl class="dl-horizontal">
            <dt>
                Ubicacion
            </dt>

            <dd>
                @inventario.Ubicacion.Descripcion
            </dd>

            <dt>
                Hardware
            </dt>

            <dd>
                @inventario.Hardware.Descripcion
            </dd>

            <dt>
                Moviento
            </dt>

            <dd>
                @inventario.Movimiento.Descripcion
            </dd>

            <dt>
                Cantidad
            </dt>

            <dd>
                @inventario.Cantidad
            </dd>

            <dt>
                Observaciones
            </dt>

            <dd>
                @inventario.Observaciones
            </dd>

        </dl>

    }
</div>

<div>
    @Html.ActionLink("Buscar otra ubicación", "Index", "Ubicacion")
</div>
